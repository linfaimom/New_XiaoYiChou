<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <FrameLayout
            android:id="@+id/frame"
            android:background="@drawable/login_frame_background"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:background="@drawable/login_image_background"
                android:layout_width="130dp"
                android:layout_height="130dp" />

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:background="#6af1e0e0"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <RelativeLayout
            android:id="@+id/first"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/user_image"
                android:src="@drawable/user"
                android:layout_centerVertical="true"
                android:layout_marginLeft="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/user"
                android:layout_marginLeft="20dp"
                android:hint="邮箱 / 手机号"
                android:textColorHint="@color/color_white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="@null"
                android:layout_toRightOf="@id/user_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_width="230dp"
                android:layout_height="1dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/first"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <ImageView
                android:id="@+id/passwd_image"
                android:src="@drawable/passwd"
                android:layout_marginLeft="90dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:layout_marginLeft="20dp"
                android:hint="密码"
                android:password="true"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColorHint="@color/color_white"
                android:background="@null"
                android:layout_toRightOf="@id/passwd_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:layout_marginTop="50dp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:layout_width="230dp"
                android:layout_height="1dp"/>


        </RelativeLayout>

        <Button
            android:id="@+id/login"
            android:text="登 录"
            android:textColor="#4494d0"
            android:textSize="36sp"
            android:background="@drawable/button_bg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="120dp"
            android:layout_width="230dp"
            android:layout_height="46dp" />

        <RelativeLayout
            android:layout_below="@id/login"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_marginTop="12dp"
                android:layout_marginLeft="46dp"
                android:background="#ffffff"
                android:layout_width="74dp"
                android:layout_height="3dp"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="合作帐号登录"
                android:textStyle="bold"
                android:textColor="@color/color_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_alignParentRight="true"
                android:layout_marginTop="12dp"
                android:layout_marginRight="46dp"
                android:background="#ffffff"
                android:layout_width="74dp"
                android:layout_height="3dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/qq"
                android:src="@drawable/qq"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/weixin"
                android:src="@drawable/weixin"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

            <ImageButton
                android:id="@+id/xinlang"
                android:src="@drawable/xinlang"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>